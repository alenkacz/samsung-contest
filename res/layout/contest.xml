<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    
    <TextView  
		android:id="@+id/tv_counter"
	    android:layout_width="fill_parent" 
	    android:layout_height="wrap_content"
	    android:textColor="#cd5c5c"
	    android:textSize="30px" 
	    android:text="@string/counter"
	    />
    
	<EditText android:id="@+id/et_contest_content" 
		android:layout_width="200dip"
		android:layout_marginRight="10px"
		android:layout_below="@id/tv_counter"
		android:lines="5"
		android:longClickable="false"
		android:layout_height="wrap_content" />
		
	<Button android:id="@+id/btn_end_attemp"
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content"
			android:layout_below="@id/tv_counter"
			android:layout_toRightOf="@id/et_contest_content"
			android:lines="1"
			android:text="@string/end_attemp" />
</RelativeLayout>
